{{>layout/header}}

<div class="row" style="margin-top:1%; margin-bottom:-1%">
    <div class="col-md-2">
        <h4> 기본 정보 </h4>
    </div>
    <div class="col-md-3">
        <p style="color:red;"> * 필수항목 </p>
    </div>
</div>
<hr>
<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <div class="row">
                    <label for="title"> 제목 </label>
                    <p style="color:red; margin-left:2%"> * </p>
                </div>
                <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요" value="{{post.title}}">
            </div>

            <div class="form-group">
                <div class="row">
                    <label for="price"> 가격 </label>
                    <p style="color:red; margin-left:2%"> * </p>
                </div>
                <input type="number" class="form-control" id="price" placeholder="금액을 입력하세요" value="{{post.price}}">
            </div>

            <div class="form-group">
                <div class="row">
                    <label for="content"> 내용 </label>
                    <p style="color:red; margin-left:2%"> * </p>
                </div>
                <textarea type="text" class="form-control" id="content">{{post.content}}</textarea>
            </div>

            <div class="form-group">
                <div class="row">
                    <label for="count"> 수량 </label>
                    <p style="color:red; margin-left:2%"> * </p>
                </div>
                <input type="number" class="form-control" id="count" placeholder="수량을 입력하세요" value="{{post.count}}">
            </div>

            <div class="form-group" hidden>
                <div class="row">
                    <label for="userName"> 작성자 </label>
                    <label for="userEmail"> 작성자 </label>
                </div>
                <input type="text" class="form-control" id="userName" value="{{user.name}}">
                <input type="text" class="form-control" id="userEmail" value="{{user.email}}">
                <input type="text" class="form-control" id="id" value="{{post.id}}">
            </div>
        </form>
    </div>
    <hr>
    <button type = "button" class="btn btn-primary" id="btn-update"> 수정완료 </button>
    <a href="/" role="button" class="btn btn-secondary"> 취소 </a>
</div>



{{>layout/footer}}