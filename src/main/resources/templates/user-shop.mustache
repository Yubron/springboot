{{>layout/header}}
<div class="row" style="margin-top:1%; margin-bottom:-1%">
    <div class="col-md-2">
        <h4> 기본 정보 </h4>
    </div>
</div>
<hr>
<div class="row">
    <div class="col-md-2">
        <div class="btn-group-vertical">
            <a href="/user/profile" class="btn btn-secondary" role="button">기본정보</a>
            <a href="/user/cart" class="btn btn-secondary" role="button">장바구니</a>
            <a href="/user/orderList" class="btn btn-secondary" role="button">구매목록</a>
            <a href="" class="btn btn-info" role="button">내 상점</a>

        </div>
    </div>
    <div class="col-md-10">
        <table class="table">
            <thead>
            <tr>
                <th style="text-align: center;">상품명</th>
                <th style="text-align: center;">가격</th>
                <th style="text-align: center;">수정</th>
                <th style="text-align: center;">삭제</th>
            </tr>
            </thead>
            <tbody>
            {{#shops}}
                {{#post}}
                <tr data-value="{{id}}">
                    <td style="text-align: center;">
                        {{#isEffective}}
                            <img src="{{imgFileUrl}}" width="70px" height="70px" style="float:left;" >
                        {{/isEffective}}
                        {{^isEffective}}
                            <img src="../../img/ineffectivePost.jpeg" width="70px" height="70px" style="float:left;" >
                        {{/isEffective}}
                        <p style="width:150px; overflow:hidden; text-overflow:ellipsis; white-space:nowrap; text-align:left; padding-left:5%"><a href="/posts/detail/{{id}}">{{title}}</a></p>
                    </td>
                    <td style="text-align: center;">{{price}} 원</td>
                    <td style="text-align: center;">
                        <a href="/posts/update/{{id}}" class="btn btn-outline-success ml-auto" role="button" style="width:55px; margin-right:3%; margin-top:2%; height:10%">수정</a>
                    </td>
                    <td style="text-align: center;"><button type="button" class="btn btn-outline-danger ml-auto shopDelete" id="btn-delete{{id}}" style="width:70px; margin-right:3%; height:10%"> 삭제 </button></td>
                </tr>
                {{/post}}
                <tr>
                    <td> 구매자 이메일 </td>
                    <td> 구매자 이름 </td>
                    <td> 구매 갯수 </td>
                    <td> 결제 금액 </td>
                </tr>
                {{#orders}}

                <tr>
                    <td> {{userEmail}}</td>
                    <td> {{userName}}</td>
                    <td> {{count}}</td>
                    <td> {{totalPrice}} </td>
                </tr>

                {{/orders}}
                {{^orders}}
                    <td colspan="5" align="center">구매자가 아직 없습니다.</td>
                {{/orders}}

            {{/shops}}

            {{^shops}}
                <tr>
                    <td colspan="6" style="text-align:center"><b><br>표시할 항목이 없습니다.</b></td>
                </tr>
            {{/shops}}
            </tbody>
        </table>
        <hr>
    </div>
</div>

{{>layout/footer}}