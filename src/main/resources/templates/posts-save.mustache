{{>layout/header}}
<div class="row" style="margin-top:1%; margin-bottom:-1%">
    <div class="col-md-2">
        <h4> 기본 정보 </h4>
    </div>
    <div class="col-md-3">
        <p style="color:red;"> * 필수항목 </p>
    </div>
</div>
<hr>
<div class="col-md-12">
    <div class="col-md-4">
        <form class="needs-validation">
            <div class="form-group">
                <div class="row">
                    <label for="title"> 제목 </label>
                    <p style="color:red; margin-left:2%"> * </p>
                </div>
                <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요" required>
            </div>

            <div class="form-group">
                <div class="row">
                    <label for="price"> 가격 </label>
                    <p style="color:red; margin-left:2%"> * </p>
                </div>
                <input type="number" class="form-control" id="price" placeholder="금액을 입력하세요" min="1" required>
            </div>

            <div class="form-group">
                <div class="row">
                    <label for="content"> 내용 </label>
                    <p style="color:red; margin-left:2%"> * </p>
                </div>
                <input type="text" class="form-control" id="content" placeholder="내용을 입력하세요" required>
            </div>

            <div class="form-group">
                <div class="row">
                    <label for="count"> 수량 </label>
                    <p style="color:red; margin-left:2%"> * </p>
                </div>
                <input type="number" class="form-control" id="count" placeholder="수량을 입력하세요" min="1" value="1" required>
            </div>
            <hr>
            <a href="/" role="button" class="btn btn-secondary"> 취소 </a>
            <button type="button" class="btn btn-primary" id="btn-save" > 등록 </button>

        </form>
    </div>

</div>

{{>layout/footer}}