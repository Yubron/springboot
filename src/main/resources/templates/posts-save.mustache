{{>layout/header}}

<div class="container">
    <div class="row">
        {{>layout/sidebar}}
        <div class="col-xs-7" style="margin:20px">
            <div class="container" style="width:300%">
                <h1> 상품 판매 </h1>
                <form>
                    <div class="form-group">
                        <label for="title"> 상품명 </label>
                        <input type="text" class="form-control" id="title" placeholder="상품을 입력하세요" >
                    </div>
                    <div class="form-group">
                        <label for="price"> 가격 </label>
                        <input type="number" class="form-control" id="price">
                    </div>
                    <div class="form-group">
                        <label for="count"> 수량 </label>
                        <input type="number" class="form-control" id="count">
                    </div>
                    <div class="form-group">
                        <label for="author"> 작성자 </label>
                        <input type="text" class="form-control" id="author" value="{{userName}}" readonly>
                    </div>
                    <div class="form-group">
                        <label for="content"> 설명 </label>
                        <input type="text" class="form-control" id="content" placeholder="설명을 입력하세요">
                    </div>
                </form>
                <a href="/" role="button" class="btn btn-secondary"> 취소 </a>
                <button type="button" class="btn btn-primary" id="btn-save"> 등록 </button>
            </div>
        </div>
    </div>
</div>



{{>layout/footer}}